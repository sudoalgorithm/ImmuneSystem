<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        >

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@drawable/person"
            android:layout_weight="1"
            android:layout_margin="10dp"
            />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"

            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#1748A6"
                android:textSize="20sp"
                android:layout_marginTop="20dp"
                android:text="Mubina Iqbal"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#757575"
                android:text="Me"
                android:layout_marginTop="7dp"
                android:textSize="16dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#757575"
                android:text="28 Yr | Female"
                android:textSize="16dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#757575"
                android:text="Marital Status: M"
                android:textSize="16dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#757575"
                android:text="Children: 2"
                android:textSize="16dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#757575"
                android:text="Blood Type: O+"
                android:textSize="16dp"
                />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Your vaccines are up-to-date"
            android:background="?attr/colorPrimary"
            android:textColor="#FFFFFF"
            android:gravity="center"
            android:padding="15dp"
            android:textSize="17sp"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#EEEEEE"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:background="?attr/colorPrimary"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="2dp"
            >

            <ImageButton
                android:id="@+id/vaccine"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/vaccine"
                android:background="@android:color/white"
                android:layout_marginRight="2dp"
                android:layout_marginLeft="4dp"
                />

            <ImageButton
                android:id="@+id/schedule"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/calendar"
                android:background="@android:color/white"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="4dp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="4dp"
            >

            <ImageButton
                android:id="@+id/group"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/group"
                android:background="@android:color/white"
                android:layout_marginRight="2dp"
                android:layout_marginLeft="4dp"
                />

            <ImageButton
                android:id="@+id/travel"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/passenger"
                android:background="@android:color/white"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="4dp"
                />
        </LinearLayout>



    </LinearLayout>

</LinearLayout>